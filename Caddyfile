# =========================
# Caddy Gateway for Railway
# Domain: api.tillygen.de
# Routes:
#   /health      -> gateway-ok
#   /ai_chat/*   -> ai-chat service (prefix kept)
#   /image/*     -> ai-image service (prefix kept)
#
# CORS strategy:
#   - Caddy answers ONLY preflight (OPTIONS) to guarantee browser compatibility
#   - Backend (Express) sets Access-Control-Allow-Origin for real responses
#   => avoids "multiple values" CORS error
# =========================

{
  admin off
  persist_config off
  auto_https off

  log {
    format json
  }

  servers {
    trusted_proxies static private_ranges
  }
}

(lb_settings) {
  lb_policy round_robin
  lb_retries 100
  lb_try_duration 10s
  lb_try_interval 250ms
}

(passive_health_checks) {
  fail_duration 60s
  max_fails 300
  unhealthy_latency 5s
  unhealthy_request_count 200
}

:{$PORT} {
  log {
    format json
  }

  # -------------------------
  # Gateway health
  # -------------------------
  respond /health "gateway-ok" 200

  # -------------------------
  # CORS Preflight (OPTIONS)
  # IMPORTANT:
  # - Do NOT set global Access-Control-Allow-Origin here, otherwise it can
  #   collide with your Express CORS headers and cause:
  #   "Access-Control-Allow-Origin contains multiple values"
  # - If you want to allow multiple origins, keep preflight permissive and
  #   let Express decide the final origin.
  # -------------------------
  @preflight method OPTIONS
  handle @preflight {
    header Access-Control-Allow-Origin "*"
    header Access-Control-Allow-Methods "GET, POST, OPTIONS"
    header Access-Control-Allow-Headers "Content-Type, Authorization, X-Request-Id"
    header Access-Control-Max-Age "86400"
    respond "" 204
  }

  # -------------------------
  # AI_CHAT (SSE-safe)
  # prefix is kept: /ai_chat/stream -> /ai_chat/stream
  # -------------------------
  handle /ai_chat/* {
    reverse_proxy {
      dynamic a {
        name ai-chat.railway.internal
        port 8080
        refresh 1s
        dial_timeout 30s
        versions ipv4 ipv6
      }

      import lb_settings
      import passive_health_checks

      # SSE hardening
      flush_interval -1
      transport http {
        response_header_timeout 0
        read_timeout 0
        write_timeout 0
      }

      header_up Host {upstream_hostport}
      header_up X-Forwarded-Proto {scheme}
      header_up X-Forwarded-Host {host}
      header_up X-Forwarded-For {remote_host}
    }
  }

  # -------------------------
  # IMAGE
  # prefix is kept: /image/* -> /image/*
  # -------------------------
  handle /image/* {
    reverse_proxy {
      dynamic a {
        name ai-image.railway.internal
        port 8080
        refresh 1s
        dial_timeout 30s
        versions ipv4 ipv6
      }

      import lb_settings
      import passive_health_checks

      header_up Host {upstream_hostport}
      header_up X-Forwarded-Proto {scheme}
      header_up X-Forwarded-Host {host}
      header_up X-Forwarded-For {remote_host}
    }
  }

  # -------------------------
  # Fallback
  # -------------------------
  respond "Not found" 404
}